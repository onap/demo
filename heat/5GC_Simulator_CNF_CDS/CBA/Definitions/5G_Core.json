{
   "tosca_definitions_version":"controller_blueprint_1_0_0",
   "metadata":{
      "template_author":"Thamlur Raju <TR00568434@TechMahindra.com>",
      "author-email":"TR00568434@TechMahindra.com",
      "user-groups":"ADMIN, OPERATION",
      "template_name":"5G_Core",
