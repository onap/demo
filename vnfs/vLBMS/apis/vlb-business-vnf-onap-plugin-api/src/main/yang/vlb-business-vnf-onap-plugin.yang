//                type uint32;
//            }
//
//            leaf description {
//                type string;
//            }
//        }
//    }


    grouping vlb-business-vnf-onap-plugin-params {
        container vdns-instances {
            list vdns-instance {

                key ip-addr;
                leaf ip-addr {
                    type string;
                }

                leaf is-enabled {
                    type boolean;
                }
            }
        }
    }
}
